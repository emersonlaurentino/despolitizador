{
  "name": "despolitizador",
  "version": "1.3.0",
  "title": "Despolitizador",
  "description": "To translate political language for people's language",
  "homepage": "http://www.felipefialho.com/despolitizador",
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "author": {
    "name": "Felipe Fialho",
    "email": "hi@felipefialho.com",
    "url": "http://www.felipefialho.com"
  },
  "scripts": {
    "start": "webpack-dev-server --config webpack/webpack.config.dev.js --open",
    "build": "webpack --config webpack/webpack.config.prod.js -p",
    "deploy": "gh-pages-deploy",
    "analyzer": "npm run build && webpack-bundle-analyzer ./dist/stats.json",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:css": "stylint ./src/",
    "lint:js": "eslint ./src/",
    "fix:js": "eslint ./src/ --fix",
    "precommit": "npm run lint",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "gh-pages-deploy": {
    "staticpath": "dist",
    "prep": [
      "build"
    ],
    "noprompt": true
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0"
  },
  "devDependencies": {
    "autoprefixer": "^8.2.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^23.4.2",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.0",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.5",
    "cssnano": "^3.10.0",
    "eslint": "^4.19.1",
    "file-loader": "0.11.2",
    "gh-pages-deploy": "^0.4.2",
    "html-webpack-plugin": "^2.30.1",
    "imagemin-webpack-plugin": "^2.1.1",
    "jest": "^23.4.2",
    "json-loader": "^0.5.7",
    "lodash-webpack-plugin": "^0.11.5",
    "lost": "^8.2.1",
    "offline-plugin": "^4.9.0",
    "postcss-font-magician": "^2.1.1",
    "postcss-loader": "^2.1.3",
    "pug": "^2.0.0-rc.3",
    "pug-loader": "^2.3.0",
    "rucksack-css": "^1.0.2",
    "rupture": "^0.7.1",
    "style-loader": "^0.18.2",
    "stylint": "^1.5.9",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-dev-server": "^3.1.5",
    "webpack-merge": "^4.1.4",
    "webpack-pwa-manifest": "^3.6.2"
  }
}
